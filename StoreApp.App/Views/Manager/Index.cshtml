
@model StoreApp.App.Models.ManagerIndexViewModel

@{
    ViewData["Title"] = "Index";
}

<h1>Manager Menu</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Index" asp-controller="Manager">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <ul class="list-group">
                    <li class="list-group-item">1. Your Information</li>
                    <li class="list-group-item">2. Search Customer By Name</li>
                    <li class="list-group-item">3. Search Order By Store</li>
                    <li class="list-group-item">4. Edit Items In Store</li>
                    <li class="list-group-item">5. Logout</li>
                </ul>
            </div>
            <div class="form-group">
                <label asp-for="choice" class="control-label">Please Enter Your Choice With NUMBER ONLY</label>
                <input asp-for="choice" class="form-control" />
                <span asp-validation-for="choice" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>
