@model StoreApp.App.Models.Customer

@{
    ViewData["Title"] = "Create";
}

<h1>Hello, Welcome To ABC's Grocery Stores</h1>

<h4>Customer</h4>
<hr />

<div class="row">
    <div class="col-md-6">

        <form asp-action="Create">
            @Html.AntiForgeryToken()
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="FirstName" class="control-label">Your First Name</label>
                <input asp-for="FirstName" class="form-control" />
                <span asp-validation-for="FirstName" class="text-danger"></span>

            </div>
            <div class="form-group">
                <label asp-for="LastName" class="control-label">Your Last Name</label>
                <input asp-for="LastName" class="form-control" />
                <span asp-validation-for="LastName" class="text-danger"></span>

            </div>

            <div class="form-group">
                <label asp-for="Username" class="control-label">Please Enter Your Favorite Username</label>
                <input asp-for="Username" class="form-control" required />
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="customerAddress.street" class="control-label">Street</label>
                <input asp-for="customerAddress.street" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="customerAddress.city" class="control-label">City</label>
                <input asp-for="customerAddress.city" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="customerAddress.state" class="control-label">State</label>
                <input asp-for="customerAddress.state" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="customerAddress.zip" class="control-label">Zipcode</label>
                <input asp-for="customerAddress.zip" class="form-control" />
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary btn-block" />
            </div>
            <div class="form-group">
                <a asp-action="Login" asp-controller="Customer"><input type="button" value="Have An Account? Login!!!!" class="btn btn-info btn-block" /></a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
